    },
    {
      "type": "header",
      "content": "Thumbnail images (click to expand)"
    },
    {
      "type": "image_picker",
      "id": "thumb_1",
      "label": "Thumbnail 1"
    },
    {
      "type": "text",
      "id": "thumb_alt_1",
      "label": "Alt text override 1 (optional)",
      "default": "."
    },
    {
      "type": "image_picker",
      "id": "thumb_2",
      "label": "Thumbnail 2"
    },
    {
      "type": "text",
      "id": "thumb_alt_2",
      "label": "Alt text override 2 (optional)",
      "default": "."
    },
    {
      "type": "image_picker",
      "id": "thumb_3",
      "label": "Thumbnail 3"
    },
    {
      "type": "text",
      "id": "thumb_alt_3",
      "label": "Alt text override 3 (optional)",
      "default": "."
    },
    {
      "type": "image_picker",
      "id": "thumb_4",
      "label": "Thumbnail 4"
